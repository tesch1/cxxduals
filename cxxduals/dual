///  Subtraction
DUALH_DEFINE_BASIC_OP_TEMPLATES(-)
//@}

//@{
///  Multiplication
DUALH_DEFINE_BASIC_OP_TEMPLATES(*)
//@}

//@{
///  Division
DUALH_DEFINE_BASIC_OP_TEMPLATES(/)
//@}

#undef DUALH_DEFINE_BASIC_OP_TEMPLATES

