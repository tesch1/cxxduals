template <typename _Tp, typename _Up>
DUAL_DEVICE_FUNC
dual<_Tp>
pow(const dual<_Tp> & xx, const _Up & aa)
{
  DUAL_STD_MATH(pow);
  DUAL_STD_MATH(abs);
  DUAL_STD_MATH(exp);
  dual<_Tp> temp;
#if 0
  _Tp deriv, xval, tol;
  xval = xx.rpart();
  // TODO- should use numeric traits of _Tp instead of 1e-15
  tol = _Tp(1e-15);
  if (abs(xval) > 0 && abs(xval) < abs(tol)) {
    xval = xx.rpart() / (abs(xx.rpart()) / tol);
    //if (xval >= 0)
    //  xval = tol;
    //if (xval < 0)
    //  xval = -tol;
  }
  deriv = aa * pow(xval, (aa - _Tp(1.0)));
  temp.rpart() = pow(xx.rpart(), aa);  //Use actual x value, only use tol for derivs
  temp.epart() = xx.epart() * deriv;
#endif
  //return exp(xx * dual<_Tp>(log(aa)));
  temp.rpart() = pow(xx.rpart(), aa);
  temp.epart() = xx.epart() * _Tp(aa) * _Tp(pow(xx.rpart(), aa - _Up(1)));
  return temp;
}
#if 1
template <typename _Tp>
DUAL_DEVICE_FUNC
dual<_Tp>
pow(const _Tp & aa, const dual<_Tp> & yy)
{
  DUAL_STD_MATH(pow);
  DUAL_STD_MATH(log);
  dual<_Tp> temp;
  temp.rpart() = pow(aa, yy.rpart());
  temp.epart() = yy.epart() * log(aa) * pow(aa, yy.rpart());
  return temp;
}

template <typename _Tp>
DUAL_DEVICE_FUNC
dual<_Tp>
pow(const dual<_Tp> & xx, const dual<_Tp> & yy)
{
  DUAL_STD_MATH(pow);
  DUAL_STD_MATH(log);
  dual<_Tp> temp;
  temp.rpart() = pow(xx.rpart(), yy.rpart());
  temp.epart() =
    xx.epart() * yy.rpart() * pow(xx.rpart(), yy.rpart() - _Tp(1)) +
    yy.epart() * log(xx.rpart()) * pow(xx.rpart(), yy.rpart());
  return temp;
}
#endif
//template <typename _Tp> dual<_Tp> pow(dual<_Tp> x, dual<_Tp> a) {
//
//}

template <typename _Tp>
DUAL_DEVICE_FUNC
dual<_Tp>
exp(const dual<_Tp> & x)
{
  DUAL_STD_MATH(exp);
  _Tp deriv;
  deriv = exp(x.rpart()) * x.epart();
  return dual<_Tp>(exp(x.rpart()), deriv);
}

template <typename _Tp>
DUAL_DEVICE_FUNC
dual<_Tp>
log(dual<_Tp> x)
{
  DUAL_STD_MATH(log);
  _Tp deriv1;
  deriv1 = x.epart() / x.rpart();
  return dual<_Tp>(log(x.rpart()), deriv1);
}

template <typename _Tp>
DUAL_DEVICE_FUNC
inline dual<_Tp>
sin(dual<_Tp> x)
{
  DUAL_STD_MATH(sin);
  DUAL_STD_MATH(cos);
  dual<_Tp> temp;
  _Tp funval, deriv;
  funval = sin(x.rpart());
  deriv = cos(x.rpart());
  temp.rpart() = funval;
  temp.epart() = deriv * x.epart();
  return temp;
}

template <typename _Tp>
DUAL_DEVICE_FUNC
inline dual<_Tp>
cos(dual<_Tp> x)
{
  DUAL_STD_MATH(sin);
  DUAL_STD_MATH(cos);
  dual<_Tp> temp;
  _Tp funval, deriv;
  funval = cos(x.rpart());
  deriv = -sin(x.rpart());
  temp.rpart() = funval;
  temp.epart() = deriv * x.epart();
  return temp;
}

template <typename _Tp>
DUAL_DEVICE_FUNC
inline dual<_Tp>
tan(dual<_Tp> x)
{
  DUAL_STD_MATH(tan);
  dual<_Tp> temp;
  _Tp funval, deriv;
  funval = tan(x.rpart());
  deriv  = funval*funval + 1.0;
  temp.rpart() = funval;
  temp.epart() = deriv*x.epart();
  return temp;
}

template <typename _Tp>
DUAL_DEVICE_FUNC
dual<_Tp>
asin(dual<_Tp> x)
{
  DUAL_STD_MATH(asin);
  DUAL_STD_MATH(sqrt);
  dual<_Tp> temp;
  _Tp funval, deriv1, deriv;
  funval = asin(x.rpart());
  deriv1 = 1.0-x.rpart()*x.rpart();
  deriv = 1.0/sqrt(deriv1);
  temp.rpart() = funval;
  temp.epart() = deriv*x.epart();
  return temp;
}

#if 0
